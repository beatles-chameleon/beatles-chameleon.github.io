@import '~@/styles/palette.styl';

/* Media query mixins
–––––––––––––––––––––––––––––––––––––––––––––––––– */
desktop()
  @media screen and (min-width: $MQMobile + 1px)
    {block}
mobile()
  @media screen and (max-width: $MQMobile)
    {block}

/* Styles
–––––––––––––––––––––––––––––––––––––––––––––––––– */
.container {
  .disable {
    color: $unableColor;
  }
  section {
    display: flex;
    padding: 7rem 3rem;
    +mobile() {
      flex-direction: column;
      padding: 3rem 1.5rem;
    }
    &.gray {
      background: $bgGray;
    }
  }
  .hello {
    .left {
      display: flex;
      +desktop() {
        width: 45%;
      }
      .logo {
        width: 14.5rem;
        +desktop() {
          margin-left: auto;
          margin-right: 5rem;
        }
        +mobile() {
          margin: auto;
        }
      }
    }
    .right {
      display: flex;
      flex-direction: column;
      +desktop() {
        flex: 1;
      }
      +mobile() {
        align-items: center;
        margin-top: 2rem;
      }
      .title {
        font-size: 5rem;
        font-weight: 700;
      }
      .desc {
        margin-top: 0.1rem;
        margin-bottom: 1.2rem;
        font-size: 1.5rem;
        font-weight: 500;
      }
      .links {
        display: flex;
        +mobile() {
          justify-content: center;
        }
        .btn {
          display: flex;
          justify-content: center;
          align-items: center;
          height: 3.2rem;
          padding-left: 2.5rem;
          padding-right: 2.5rem;
          font-size: 1.1rem;
          font-weight: 500;
          border-radius: 3rem;
          + .btn {
            margin-left: 1rem;
          }
          &.btn-primary {
            color: #fff;
            background: $accentColor;
          }
          &.btn-default {
            border: 2px solid $accentColor;
          }
        }
      }
    }
  }
  .flows {
    padding-top: 4rem;
    padding-bottom: 4rem;
    +desktop() {
      justify-content: center;
    }
    .card {
      margin-left: 1rem;
      margin-right: 1rem;
      padding: 2rem;
      background: #fff;
      border-radius: 0.5rem;
      box-shadow: 0 0 4rem rgba(#000, 0.05);
      +desktop() {
        width: 20rem;
      }
      +mobile() {
        + .card {
          margin-top: 2rem;
        }
      }
      h2 {
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
        font-weight: 600;
      }
      h3 {
        font-size: 1.1rem;
        font-weight: 600;
      }
      li {
        color: $minorColor;
      }
      &.platforms {
        li {
          display: flex;
          align-items: center;
        }
        li + li {
          margin-top: 0.5rem;
        }
        img {
          flex-shrink: 0;
          width: 20px;
          height: 20px;
          margin-right: 0.6rem;
        }
        .icon-check {
          flex-shrink: 0;
          display: flex;
          justify-content: center;
          align-items: center;
          width: 18px;
          height: 18px;
          margin-left: auto;
          background: $greenColor;
          border-radius: 100%;
          &::before {
            content: '';
            width: 8px;
            height: 4px;
            border-left: 2px solid #fff;
            border-bottom: 2px solid #fff;
            transform: translateY(-1px) rotate(-45deg);
          }
        }
      }
      &.binders {
        li {
          padding: 0.8rem;
          text-align: center;
          border-radius: 0.5rem;
          &.model {
            background: linear-gradient(to right, #ec72da 0%, #f59249 57%, #f6b926 100%);
          }
          &.view {
            background: linear-gradient(to right, #a377ff 0%, #3296ff 61%);
          }
          &.view-model {
            background: linear-gradient(to right, #23c435 0%, #55bbf9 100%);
          }
        }
        li + li {
          margin-top: 1.2rem;
        }
        h3 {
          margin-bottom: 0.2rem;
          color: #fff;
        }
        p {
          color: rgba(#fff, 0.8);
        }
      }
      &.handlers {
        li {
          display: flex;
        }
        li + li {
          margin-top: 2rem;
        }
        img {
          flex-shrink: 0;
          width: 3rem;
          height: 3rem;
          margin-right: 1rem;
          padding: 0.5rem;
          background: rgba($accentColor, 0.2);
          border-radius: 0.7rem;
        }
        h3 {
          margin-bottom: 0.5rem;
        }
        p {
          color: $hintColor;
        }
      }
    }
  }
  .cycle {
    justify-content: center;
    align-items: center;
    +desktop() {
      &.normal {
        h2 {
          padding-right: 5rem;
          text-align: right;
        }
      }
      &.reverse {
        flex-direction: row-reverse;
        h2 {
          padding-left: 5rem;
        }
        ul {
          display: flex;
          flex-direction: column;
          align-items: flex-end;
        }
      }
    }
    h2,
    ul {
      flex: 0 0 50%;
    }
    h2 {
      font-size: 3rem;
      +mobile() {
        margin-bottom: 2rem;
      }
    }
    ul {
      li {
        position: relative;
        display: flex;
        padding: 1.2rem;
        background: #fff;
        border-radius: 0.8rem;
        box-shadow: 0 0.2rem 2rem rgba(#000, 0.1);
        +desktop() {
          width: 30rem;
        }
        i {
          display: inline-block;
          margin-left: 0.2rem;
          font-style: normal;
          transform: translate(-0.5rem);
          opacity: 0;
          transition: 0.1s;
        }
        &:hover i {
          transform: translate(0);
          opacity: 1;
        }
      }
      li + li {
        margin-top: 1.5rem;
      }
      img {
        flex-shrink: 0;
        width: 3.5rem;
        height: 3.5rem;
        padding: 0.5rem;
        background: rgba($accentColor, 0.55);
        border-radius: 0.7rem;
      }
      div {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        margin-left: 1rem;
        margin-right: 1rem;
        h3 {
          line-height: 1.7rem;
        }
        p {
          margin-top: .3rem;
          color: $hintColor;
          line-height: 1.5rem;
        }
      }
      .right {
        width: 5.2rem;
        margin-top: 1rem;
        &.link {
          color: rgba($accentColor, 0.9);
        }
      }
      .cover-link {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
      }
    }
  }
}
