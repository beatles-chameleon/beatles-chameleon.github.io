@import '~@/styles/palette.styl';

/* Media query mixins
–––––––––––––––––––––––––––––––––––––––––––––––––– */
desktop()
  @media screen and (min-width: $MQNarrow + 1px)
    {block}
mobile()
  @media screen and (max-width: $MQNarrow)
    {block}

/* Base
–––––––––––––––––––––––––––––––––––––––––––––––––– */
.container {
  * {
    box-sizing: border-box;
  }
  h1,
  h2,
  h3,
  h4,
  p {
    margin-top: 0;
    margin-bottom: 0;
  }
  h1,
  h2 {
    font-weight: 700;
  }
  h3,
  h4 {
    font-weight: 600;
  }
  h2 {
    padding-bottom: 0;
    border-bottom: 0;
    +desktop() {
      font-size: 2.4rem;
    }
    +mobile() {
      font-size: 2rem;
    }
  }
  h3 {
    font-size: 1.2rem;
  }
  ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .btn {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 3.2rem;
    padding-left: 2.5rem;
    padding-right: 2.5rem;
    font-size: 1.1rem;
    font-weight: 500;
    border-radius: 3rem;
    + .btn {
      margin-left: 1rem;
    }
    &.btn-primary {
      color: #fff;
      background: $accentColor;
    }
    &.btn-default {
      border: 2px solid $accentColor;
    }
  }
}

/* Styles
–––––––––––––––––––––––––––––––––––––––––––––––––– */
.container {
  section,
  footer {
    +desktop() {
      padding: 7rem 0;
    }
    +mobile() {
      padding: 3rem 1.5rem;
    }
  }
  section.gray {
    background: $bgGray;
  }
  .hello {
    +desktop() {
      display: flex;
    }
    +mobile() {
      padding-top: 8rem;
      padding-bottom: 8rem;
    }
    .left {
      display: flex;
      +desktop() {
        width: 45%;
      }
      .logo {
        width: 14.5rem;
        +desktop() {
          margin-left: auto;
          margin-right: 5rem;
        }
        +mobile() {
          margin: auto;
        }
      }
    }
    .right {
      display: flex;
      flex-direction: column;
      +desktop() {
        flex: 1;
      }
      +mobile() {
        align-items: center;
        margin-top: 2rem;
      }
      .title {
        align-self: flex-start;
        position: relative;
        +mobile() {
          align-self: center;
          display: flex;
          flex-direction: column-reverse;
          align-items: center;
        }
        span {
          font-size: 5rem;
        }
        sup {
          padding: .3rem .6rem;
          color: $accentColor;
          font-size: 0.85rem;
          font-weight: 600;
          white-space: nowrap;
          background: rgba($accentColor, .1);
          border-radius: .4rem;
          +desktop() {
            position: absolute;
            top: .4rem;
            left: 94%;
          }
          +mobile() {
            margin-bottom: -.3rem;
          }
        }
      }
      .desc {
        margin-top: 0.1rem;
        margin-bottom: 1.2rem;
        font-size: 1.5rem;
        font-weight: 500;
      }
      .links {
        display: flex;
        +mobile() {
          justify-content: center;
        }
      }
    }
  }
  .flows {
    padding-top: 3rem;
    padding-bottom: 3rem;
    +desktop() {
      display: flex;
      justify-content: center;
    }
    .card {
      background: #fff;
      border-radius: 0.5rem;
      box-shadow: 0 0 4rem rgba(#000, 0.05);
      +desktop() {
        width: 20rem;
        margin-left: 1rem;
        margin-right: 1rem;
        padding: 2rem;
      }
      +mobile() {
        padding: 1.2rem;
        + .card {
          margin-top: 2rem;
        }
      }
      h2 {
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
        font-weight: 600;
      }
      li {
        color: $minorColor;
      }
      &.ends {
        li {
          display: flex;
          align-items: center;
        }
        li + li {
          margin-top: 0.5rem;
        }
        img {
          flex-shrink: 0;
          width: 20px;
          height: 20px;
          margin-right: 0.6rem;
        }
        .icon-check {
          flex-shrink: 0;
          width: 18px;
          height: 18px;
          margin-left: auto;
          background: $greenColor url('~@/public/images/icon_check.svg') center / 14px no-repeat;
          border-radius: 100%;
        }
      }
      &.standard {
        li {
          padding: 0.8rem;
          text-align: center;
          border-radius: 0.5rem;
          &.model {
            background: linear-gradient(to right, #ec72da 0%, #f59249 57%, #f6b926 100%);
          }
          &.view {
            background: linear-gradient(to right, #a377ff 0%, #3296ff 61%);
          }
          &.view-model {
            background: linear-gradient(to right, #23c435 0%, #55bbf9 100%);
          }
        }
        li + li {
          margin-top: 1.2rem;
        }
        h3 {
          margin-bottom: 0.1rem;
          color: #fff;
        }
        p {
          color: rgba(#fff, 0.8);
        }
      }
      &.helpers {
        li {
          display: flex;
        }
        li + li {
          margin-top: 2rem;
        }
        img {
          flex-shrink: 0;
          width: 3rem;
          height: 3rem;
          margin-right: 1rem;
          padding: 0.5rem;
          background: rgba($accentColor, 0.2);
          border-radius: 0.7rem;
        }
        h3 {
          margin-bottom: 0.4rem;
        }
        p {
          color: $hintColor;
        }
      }
    }
  }
  .cycle {
    +desktop() {
      display: flex;
      align-items: center;
      h2, ul {
        width: 50%;
      }
    }
    &.reverse {
      +desktop() {
        flex-direction: row-reverse;
        h2 {
          padding-left: 5rem;
          padding-right: 0;
          text-align: left;
        }
        ul {
          display: flex;
          flex-direction: column;
          align-items: flex-end;
        }
      }
    }
    h2 {
      +desktop() {
        padding-right: 5rem;
        font-size: 3rem;
        text-align: right;
      }
      +mobile() {
        margin-bottom: 2rem;
        text-align: center;
      }
    }
    ul {
      +mobile() {
        width: 100%;
        li {
          max-width: 32rem;
          margin-left: auto;
          margin-right: auto;
        }
      }
      li {
        position: relative;
        display: flex;
        padding: 1.2rem;
        background: #fff;
        border-radius: 0.8rem;
        box-shadow: 0 0.2rem 2rem rgba(#000, 0.1);
        +desktop() {
          width: 28rem;
        }
        i {
          position: absolute;
          font-style: normal;
          right: 1rem;
          opacity: 0;
          transition: 0.1s;
        }
        &:hover i {
          right: 0;
          opacity: 1;
        }
      }
      li + li {
        margin-top: 1.5rem;
      }
      img {
        flex-shrink: 0;
        width: 3.5rem;
        height: 3.5rem;
        padding: 0.5rem;
        background: rgba($accentColor, 0.5);
        border-radius: 0.7rem;
      }
      div {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        margin-left: 1rem;
        margin-right: 1rem;
        h3 {
          line-height: 1.7rem;
        }
        p {
          margin-top: .4rem;
          color: $hintColor;
          line-height: 1.4rem;
        }
      }
      .entry {
        +desktop() {
          position: relative;
          margin-top: 1rem;
          width: 5.2rem;
          &.link {
            color: rgba($accentColor, 0.9);
          }
          &.disable {
            color: $unableColor;
          }
        }
        +mobile() {
          display: none;
        }
      }
      .cover-link {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
      }
    }
  }
  .uni {
    color: transparent;
    background: linear-gradient(150deg, #DD79D3 30%, #9D79F7, #7B84F7, #5796EF, #71BF4C 70%);
    background-clip: text;
    h2 {
      text-align: center;
      +desktop() {
        margin-bottom: 2rem;
        font-size: 2.4rem;
      }
    }
    ul {
      +desktop() {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        width: $maxWidth;
        margin-left: auto;
        margin-right: auto;
      }
      li {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 2rem;
        +desktop() {
          width: 18rem;
        }
      }
      img {
        width: 3.5rem;
        height: 3.5rem;
      }
      h3 {
        margin-top: 1rem;
        margin-bottom: .8rem;
        color: $textColor;
      }
      p {
        text-align: center
      }
    }
  }
  .cases {
    background: linear-gradient($bgGray, #fff);
    h2 {
      text-align: center;
      +desktop() {
        margin-bottom: 3rem;
      }
      +mobile() {
        margin-bottom: 2rem;
      }
    }
  }
  .actions {
    display: flex;
    justify-content: center;
  }
  .world {
    +desktop() {
      display: flex;
      justify-content: space-between;
      width: $maxWidth;
      margin-left: auto;
      margin-right: auto;
    }
    .left {
      display: flex;
      flex-direction: column;
      .logo {
        display: flex;
        align-items: center;
        img {
          width: 3.5rem;
          margin-right: 1rem;
        }
        span {
          font-size: 2.5em;
          font-weight: 700;
        }
      }
      .copyright {
        color: $hintColor;
        font-size: .75rem;
        +desktop() {
          margin-top: auto;
        }
        +mobile() {
          margin-top: 1rem;
        }
      }
    }
    .right {
      +desktop() {
        display: flex;
      }
      .col {
        position: relative;
        +desktop() {
          width: 5.5rem;
          margin-left: 5rem;
        }
        +mobile() {
          margin-top: 1rem;
          padding-top: 1.4rem;
          border-top: 1px solid $borderColor;
        }
        h4 {
          margin-bottom: .5rem;
        }
        li {
          a {
            display: block;
            color: $hintColor;
            cursor: pointer;
            +desktop() {
              font-size: .9rem;
              line-height: 2;
            }
            +mobile() {
              font-size: 1rem;
              line-height: 2.2;
            }
            img {
              display: none;
              position: absolute;
              z-index: 1;
              top: 50%;
              max-width: none;
              width: 14rem;
              padding: .8rem;
              background: #fff;
              border-radius: .8rem;
              box-shadow: 0 .2rem 2rem rgba(#000, .1);
              transform: translateY(-50%);
              +desktop() {
                left: 100%;
              }
              +mobile() {
                right: 0;
              }
            }
            &:hover {
              img {
                display: block;
              }
            }
          }
        }
      }
    }
  }
}

/* Slider
–––––––––––––––––––––––––––––––––––––––––––––––––– */
.VueCarousel {
  +desktop() {
    width: 55rem;
    margin-left: auto;
    margin-right: auto;
  }
  /deep/ .VueCarousel-wrapper {
    /deep/ .VueCarousel-inner {
      .VueCarousel-slide {
        display: flex;
        justify-content: center;
        padding-top: 1rem;
        padding-bottom: 1rem;
        img {
          $radius = 1.2rem;
          padding-top: $radius;
          padding-bottom: $radius;
          border-radius: $radius;
          background: #fff;
          box-shadow: 0 .1rem 1rem rgba(#000, .1);
          +desktop() {
            width: 16rem;
          }
          +mobile() {
            max-width 16rem;
            width: 72%;
          }
        }
      }
    }
  }
  /deep/ .VueCarousel-navigation {
    .VueCarousel-navigation-button {
      width: 3.5rem;
      height: 3.5rem;
      text-indent: -9999rem;
      background-color: #fff;
      background-size: 1.3rem;
      background-repeat: no-repeat;
      border-radius: 100%;
      box-shadow: 0 .2rem 1rem rgba(#000, .1);
      outline: 0;
      &.VueCarousel-navigation-prev {
        left: 2rem;
        background-image: url('~@/public/images/icon_arrow_left.svg');
        background-position: 1rem center;
        +mobile() {
          left: 3.5rem;
        }
      }
      &.VueCarousel-navigation-next {
        right: 2rem;
        background-image: url('~@/public/images/icon_arrow_right.svg');
        background-position: right 1rem center;
        +mobile() {
          right: 3.5rem;
        }
      }
      &.VueCarousel-navigation--disabled {
        box-shadow: none;
      }
    }
  }
}
